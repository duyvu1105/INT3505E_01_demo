			"name": "API Login",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Status code is 200 OK\", function () {\r",
							"    pm.response.to.have.status(200);\r",
							"});\r",
							"\r",
							"// Chuyển đổi Response Body sang đối tượng JSON\r",
							"var jsonData = pm.response.json();\r",
							"\r",
							"// 1. Kiểm tra xem trường chứa token có tồn tại hay không\r",
							"pm.test(\"Response contains an access token\", function () {\r",
							"    // Thay 'token' bằng tên trường chứa token thực tế của bạn\r",
							"    pm.expect(jsonData.data.access_token).to.exist; \r",
							"});\r",
							"\r",
							"// 2. LƯU TOKEN VÀO BIẾN MÔI TRƯỜNG (Environment Variable)\r",
							"// Biến môi trường 'authToken' sẽ được tạo/cập nhật với giá trị token mới\r",
							"pm.environment.set(\"authToken\", jsonData.data.access_token); \r",
							"\r",
							"console.log(\"Auth Token saved for Newman: \" + pm.environment.get(\"authToken\"));"
						],
						"type": "text/javascript",
						"packages": {},
						"requests": {}
					}
