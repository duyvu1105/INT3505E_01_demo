		{
			"name": "Get all books",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"// Kiểm tra trạng thái HTTP\r",
							"pm.test(\"Status code is 200 OK\", function () {\r",
							"    pm.response.to.have.status(200);\r",
							"});\r",
							"\r",
							"// Chuyển đổi Response Body sang đối tượng JSON\r",
							"var jsonData = pm.response.json();\r",
							"\r",
							"// Truy cập vào mảng sách thông qua trường 'data'\r",
							"var booksArray = jsonData.data; \r",
							"\r",
							"// Kiểm tra xem trường 'data' có tồn tại và có phải là mảng không\r",
							"pm.test(\"Response contains an array of books under 'data'\", function () {\r",
							"    pm.expect(booksArray).to.be.an('array');\r",
							"});\r",
							"\r",
							"if (booksArray && booksArray.length > 0) {\r",
							"    // 1. Lấy cuốn sách đầu tiên (phần tử thứ 0)\r",
							"    var firstBook = booksArray[0];\r",
							"\r",
							"    // 2. Trích xuất ID của cuốn sách đầu tiên. \r",
							"    // Dựa trên JSON, bạn có thể sử dụng trường 'id' hoặc trường '_id.$oid'\r",
							"    // Ta ưu tiên dùng trường 'id' vì nó đơn giản hơn: \"id\": \"691042607d217448ffc82db0\"\r",
							"    var firstBookId = firstBook.id; \r",
							"\r",
							"    // 3. Kiểm tra xem ID có tồn tại không\r",
							"    pm.test(\"First book ID exists\", function () {\r",
							"        pm.expect(firstBookId).to.be.a('string');\r",
							"    });\r",
							"\r",
							"    // 4. LƯU ID VÀO BIẾN MÔI TRƯỜNG\r",
							"    pm.environment.set(\"firstBookId\", firstBookId); \r",
							"\r",
							"    console.log(\"Successfully saved first book ID: \" + pm.environment.get(\"firstBookId\"));\r",
							"} else {\r",
							"    // Nếu mảng rỗng\r",
							"    pm.expect(false, \"List of books is empty, cannot retrieve ID.\").to.be.true;\r",
							"}"
						],
						"type": "text/javascript",
						"packages": {},
						"requests": {}
					}
				}
			],
